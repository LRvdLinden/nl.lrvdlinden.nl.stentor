{
  "id": "new_article",
  "title": {
    "en": "New Article Received",
    "nl": "Nieuw artikel ontvangen"
  },
  "description": {
    "en": "Triggered when a new article is received from De Stentor.",
    "nl": "Geactiveerd wanneer een nieuw artikel wordt ontvangen van De Stentor."
  },
"platforms": [
  "local"
],
"args": [
  {
    "type": "device",
    "name": "device",
    "filter": "driver_id=stentor"
  }
],
  "tokens": [
    {
      "name": "title",
      "title": {
        "en": "Article title",
        "nl": "Artikel titel"
      },
      "type": "string"
    },
    {
      "name": "link",
      "title": {
        "en": "Article URL",
        "nl": "Artikel URL"
      },
      "type": "string"
    },
    {
      "name": "content",
      "title": {
        "en": "Article content",
        "nl": "Artikel content"
      },
      "type": "string"
    },
    {
      "name": "pubDate",
      "title": {
        "en": "Article Publication Date",
        "nl": "Artikel Publicatiedatum"
      },
      "type": "string"
    },
    {
      "name": "imageUrl",
      "title": {
        "en": "Image URL",
        "nl": "Afbeelding URL"
      },
      "type": "string"
    },
    {
        "name": "image",
        "title": {
          "en": "Image",
          "nl": "Afbeelding"
        },
        "type": "image"
      }
  ]
}